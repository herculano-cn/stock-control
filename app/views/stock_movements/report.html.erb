<% content_for :title, "Relatório de Movimentações - Stock Control" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        Relatório de Movimentações
      </h2>
    </div>
    <div class="mt-4 flex space-x-3 md:ml-4 md:mt-0">
      <%= link_to 'Exportar CSV', report_stock_movements_path(format: :csv, q: params[:q]), class: 'inline-flex items-center rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500' %>
      <%= link_to 'Voltar', stock_movements_path, class: 'inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50' %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white shadow rounded-lg p-4">
    <%= search_form_for @q, url: report_stock_movements_path, method: :get, html: { class: 'space-y-4' } do |f| %>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-4">
        <div>
          <%= f.label :movement_type_eq, 'Tipo', class: 'block text-sm font-medium text-gray-700' %>
          <%= f.select :movement_type_eq,
                       options_for_select([['Todos', nil], ['Entrada', 'entry'], ['Saída', 'exit'], ['Ajuste', 'adjustment'], ['Devolução', 'return']], params.dig(:q, :movement_type_eq)),
                       {},
                       class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
        </div>
        
        <div>
          <%= f.label :movement_date_gteq, 'Data Inicial', class: 'block text-sm font-medium text-gray-700' %>
          <%= f.date_field :movement_date_gteq, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
        </div>
        
        <div>
          <%= f.label :movement_date_lteq, 'Data Final', class: 'block text-sm font-medium text-gray-700' %>
          <%= f.date_field :movement_date_lteq, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
        </div>
        
        <div class="flex items-end space-x-2">
          <%= f.submit 'Filtrar', class: 'flex-1 rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500' %>
          <%= link_to 'Limpar', report_stock_movements_path, class: 'flex-1 rounded-md bg-gray-200 px-3 py-2 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-300 text-center' %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
    <% StockMovement.movement_types.keys.each do |type| %>
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500">
          <%= type.humanize %>
        </dt>
        <dd class="mt-1 space-y-1">
          <div class="text-2xl font-semibold tracking-tight text-gray-900">
            <%= @totals_by_type[type] || 0 %> <span class="text-sm font-normal text-gray-500">unidades</span>
          </div>
          <div class="text-sm font-medium text-green-600">
            <%= number_to_currency(@value_by_type[type] || 0, unit: 'R$ ', separator: ',', delimiter: '.') %>
          </div>
        </dd>
      </div>
    <% end %>
  </div>

  <!-- Movements Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Movimentações Detalhadas</h3>
      
      <% if @stock_movements.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Data</th>
                <th scope="col" class="px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Produto</th>
                <th scope="col" class="px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Tipo</th>
                <th scope="col" class="px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Quantidade</th>
                <th scope="col" class="px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Preço Unit.</th>
                <th scope="col" class="px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Valor Total</th>
                <th scope="col" class="px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Usuário</th>
                <th scope="col" class="px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Referência</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @stock_movements.each do |movement| %>
                <tr class="hover:bg-gray-50">
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= l(movement.movement_date, format: :short) %>
                  </td>
                  <td class="px-3 py-4 text-sm text-gray-900">
                    <%= link_to movement.product.name, product_path(movement.product), class: 'text-indigo-600 hover:text-indigo-900' %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm">
                    <% 
                      badge_class = case movement.movement_type
                      when 'entry'
                        'bg-green-100 text-green-800'
                      when 'exit'
                        'bg-red-100 text-red-800'
                      when 'adjustment'
                        'bg-yellow-100 text-yellow-800'
                      when 'return'
                        'bg-blue-100 text-blue-800'
                      end
                    %>
                    <span class="inline-flex rounded-full px-2 text-xs font-semibold leading-5 <%= badge_class %>">
                      <%= movement.movement_type.humanize %>
                    </span>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-gray-900">
                    <%= movement.quantity %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= movement.unit_cost.present? ? number_to_currency(movement.unit_cost, unit: 'R$ ', separator: ',', delimiter: '.') : '-' %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900 font-semibold">
                    <%= number_to_currency(movement.total_value || 0, unit: 'R$ ', separator: ',', delimiter: '.') %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= movement.user.name %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= movement.reference_document || '-' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot class="bg-gray-50">
              <tr>
                <td colspan="3" class="px-3 py-4 text-sm font-semibold text-gray-900 text-right">Total:</td>
                <td class="whitespace-nowrap px-3 py-4 text-sm font-bold text-gray-900">
                  <%= @stock_movements.sum(:quantity) %>
                </td>
                <td></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm font-bold text-green-600">
                  <%= number_to_currency(@stock_movements.sum { |m| m.total_value || 0 }, unit: 'R$ ', separator: ',', delimiter: '.') %>
                </td>
                <td colspan="2"></td>
              </tr>
            </tfoot>
          </table>
        </div>
      <% else %>
        <p class="text-sm text-gray-500 text-center py-8">Nenhuma movimentação encontrada para os filtros selecionados.</p>
      <% end %>
    </div>
  </div>
</div>