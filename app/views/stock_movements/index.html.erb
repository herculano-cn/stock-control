<% content_for :title, "Movimentações de Estoque - Stock Control" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        Movimentações de Estoque
      </h2>
    </div>
    <div class="mt-4 flex space-x-3 md:ml-4 md:mt-0">
      <%= link_to 'Relatório', report_stock_movements_path, class: 'inline-flex items-center rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500' %>
      <% if policy(StockMovement).create? %>
        <%= link_to new_stock_movement_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" do %>
          <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
          </svg>
          Nova Movimentação
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Search Form -->
  <div class="bg-white shadow rounded-lg p-4">
    <%= search_form_for @q, url: stock_movements_path, method: :get, html: { class: 'space-y-4' } do |f| %>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-5">
        <div>
          <%= f.label :product_name_cont, 'Produto', class: 'block text-sm font-medium text-gray-700' %>
          <%= f.search_field :product_name_cont, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', placeholder: 'Buscar produto' %>
        </div>
        
        <div>
          <%= f.label :movement_type_eq, 'Tipo', class: 'block text-sm font-medium text-gray-700' %>
          <%= f.select :movement_type_eq,
                       options_for_select([['Todos', nil], ['Entrada', 'entry'], ['Saída', 'exit'], ['Ajuste', 'adjustment'], ['Devolução', 'return']], params.dig(:q, :movement_type_eq)),
                       {},
                       class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
        </div>
        
        <div>
          <%= f.label :movement_date_gteq, 'Data Inicial', class: 'block text-sm font-medium text-gray-700' %>
          <%= f.date_field :movement_date_gteq, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
        </div>
        
        <div>
          <%= f.label :movement_date_lteq, 'Data Final', class: 'block text-sm font-medium text-gray-700' %>
          <%= f.date_field :movement_date_lteq, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
        </div>
        
        <div class="flex items-end space-x-2">
          <%= f.submit 'Buscar', class: 'flex-1 rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500' %>
          <%= link_to 'Limpar', stock_movements_path, class: 'flex-1 rounded-md bg-gray-200 px-3 py-2 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-300 text-center' %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Stock Movements Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <% if @stock_movements.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Data</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Produto</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Tipo</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Quantidade</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Valor Total</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Usuário</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Motivo</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wide text-gray-500">Ações</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <% @stock_movements.each do |movement| %>
              <tr class="hover:bg-gray-50">
                <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-500">
                  <%= l(movement.movement_date, format: :short) %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <%= link_to movement.product.name, product_path(movement.product), class: 'text-indigo-600 hover:text-indigo-900' %>
                </td>
                <td class="whitespace-nowrap px-6 py-4 text-sm">
                  <% 
                    badge_class = case movement.movement_type
                    when 'entry'
                      'bg-green-100 text-green-800'
                    when 'exit'
                      'bg-red-100 text-red-800'
                    when 'adjustment'
                      'bg-yellow-100 text-yellow-800'
                    when 'return'
                      'bg-blue-100 text-blue-800'
                    end
                  %>
                  <span class="inline-flex rounded-full px-2 text-xs font-semibold leading-5 <%= badge_class %>">
                    <%= movement.movement_type.humanize %>
                  </span>
                </td>
                <td class="whitespace-nowrap px-6 py-4 text-sm font-semibold text-gray-900">
                  <%= movement.quantity %>
                </td>
                <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-500">
                  <%= number_to_currency(movement.total_value || 0, unit: 'R$ ', separator: ',', delimiter: '.') %>
                </td>
                <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-500">
                  <%= movement.user.name %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <%= truncate(movement.reason, length: 30) %>
                </td>
                <td class="whitespace-nowrap px-6 py-4 text-right text-sm font-medium">
                  <%= link_to 'Ver', stock_movement_path(movement), class: 'text-indigo-600 hover:text-indigo-900' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <%= render 'shared/pagination', collection: @stock_movements %>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
        </svg>
        <h3 class="mt-2 text-sm font-semibold text-gray-900">Nenhuma movimentação encontrada</h3>
        <p class="mt-1 text-sm text-gray-500">Comece criando uma nova movimentação de estoque.</p>
        <% if policy(StockMovement).create? %>
          <div class="mt-6">
            <%= link_to new_stock_movement_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" do %>
              <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
              </svg>
              Nova Movimentação
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>