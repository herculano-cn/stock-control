<%= simple_form_for @stock_movement, html: { class: 'space-y-6' } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="bg-white shadow rounded-lg p-6 space-y-6">
    <h3 class="text-lg font-medium leading-6 text-gray-900">Informações da Movimentação</h3>
    
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <%= f.association :product,
                          label: 'Produto',
                          collection: @products,
                          prompt: 'Selecione um produto',
                          required: true,
                          input_html: { class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' },
                          wrapper_html: { class: 'space-y-1' } %>
      </div>

      <div>
        <%= f.input :movement_type,
                    label: 'Tipo de Movimentação',
                    collection: [['Entrada', 'entry'], ['Saída', 'exit'], ['Ajuste', 'adjustment'], ['Devolução', 'return']],
                    required: true,
                    input_html: { class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' },
                    wrapper_html: { class: 'space-y-1' } %>
      </div>

      <div>
        <%= f.input :quantity,
                    label: 'Quantidade',
                    as: :integer,
                    required: true,
                    input_html: { class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', min: '1' },
                    wrapper_html: { class: 'space-y-1' } %>
      </div>

      <div>
        <%= f.input :unit_cost,
                    label: 'Unit Cost',
                    as: :decimal,
                    input_html: { class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', step: '0.01', min: '0' },
                    wrapper_html: { class: 'space-y-1' },
                    hint: 'Opcional - será calculado automaticamente se não informado' %>
      </div>

      <div>
        <%= f.input :movement_date,
                    label: 'Data da Movimentação',
                    as: :date,
                    required: true,
                    input_html: { class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', value: @stock_movement.movement_date || Date.today },
                    wrapper_html: { class: 'space-y-1' } %>
      </div>

      <div>
        <%= f.input :reference_document,
                    label: 'Reference Number',
                    input_html: { class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', placeholder: 'Ex: INV-12345' },
                    wrapper_html: { class: 'space-y-1' },
                    hint: 'Invoice number, order number, etc.' %>
      </div>

      <div class="sm:col-span-2">
        <%= f.input :reason,
                    label: 'Motivo',
                    input_html: { class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', placeholder: 'Ex: Compra, Venda, Inventário' },
                    wrapper_html: { class: 'space-y-1' } %>
      </div>

    </div>

    <div class="rounded-md bg-blue-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <p class="text-sm text-blue-700">
            <strong>Importante:</strong> Movimentações de estoque não podem ser editadas após a criação. Certifique-se de que todos os dados estão corretos antes de salvar.
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="flex items-center justify-end space-x-3">
    <%= link_to 'Cancelar', stock_movements_path, class: 'rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50' %>
    <%= f.button :submit, 
                 'Criar Movimentação',
                 class: 'rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
  </div>
<% end %>