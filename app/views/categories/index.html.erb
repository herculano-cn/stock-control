<% content_for :title, "Categorias - Stock Control" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        Categorias
      </h2>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <% if policy(Category).create? %>
        <%= link_to new_category_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
          <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
          </svg>
          Nova Categoria
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Search Form -->
  <div class="bg-white shadow rounded-lg p-4">
    <%= search_form_for @q, url: categories_path, method: :get, html: { class: 'space-y-4' } do |f| %>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
        <div>
          <%= f.label :name_cont, 'Nome', class: 'block text-sm font-medium text-gray-700' %>
          <%= f.search_field :name_cont, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', placeholder: 'Buscar por nome' %>
        </div>
        
        <div>
          <%= f.label :active_eq, 'Status', class: 'block text-sm font-medium text-gray-700' %>
          <%= f.select :active_eq, [['Todos', nil], ['Ativo', true], ['Inativo', false]], {}, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
        </div>
        
        <div class="flex items-end">
          <%= f.submit 'Buscar', class: 'w-full rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
          <%= link_to 'Limpar', categories_path, class: 'ml-2 w-full rounded-md bg-gray-200 px-3 py-2 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-300 text-center' %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Categories Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <% if @categories.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Nome</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Descrição</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Produtos</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Status</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wide text-gray-500">Ações</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% @categories.each do |category| %>
            <tr class="hover:bg-gray-50">
              <td class="whitespace-nowrap px-6 py-4 text-sm font-medium text-gray-900">
                <%= link_to category.name, category_path(category), class: 'text-indigo-600 hover:text-indigo-900' %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500">
                <%= truncate(category.description, length: 50) %>
              </td>
              <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-500">
                <%= category.products.count %>
              </td>
              <td class="whitespace-nowrap px-6 py-4 text-sm">
                <% if category.active? %>
                  <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800">Ativo</span>
                <% else %>
                  <span class="inline-flex rounded-full bg-red-100 px-2 text-xs font-semibold leading-5 text-red-800">Inativo</span>
                <% end %>
              </td>
              <td class="whitespace-nowrap px-6 py-4 text-right text-sm font-medium space-x-2">
                <%= link_to 'Ver', category_path(category), class: 'text-indigo-600 hover:text-indigo-900' %>
                <% if policy(category).edit? %>
                  <%= link_to 'Editar', edit_category_path(category), class: 'text-yellow-600 hover:text-yellow-900' %>
                <% end %>
                <% if policy(category).destroy? %>
                  <%= button_to 'Desativar', category_path(category), method: :delete, data: { turbo_confirm: 'Tem certeza que deseja desativar esta categoria?' }, class: 'text-red-600 hover:text-red-900' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <%= render 'shared/pagination', collection: @categories %>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
        </svg>
        <h3 class="mt-2 text-sm font-semibold text-gray-900">Nenhuma categoria encontrada</h3>
        <p class="mt-1 text-sm text-gray-500">Comece criando uma nova categoria.</p>
        <% if policy(Category).create? %>
          <div class="mt-6">
            <%= link_to new_category_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" do %>
              <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
              </svg>
              Nova Categoria
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>